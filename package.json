{
	"name": "intelliskript",
	"displayName": "IntelliSkript",
	"description": "IntelliSense for skript",
	"author": "John Heikens",
	"license": "GNU",
	"version": "1.7.21",
	"repository": {
		"type": "git",
		"url": "https://github.com/JohnHeikens/IntelliSkript"
	},
	"publisher": "JohnHeikens",
	"categories": [
		"Programming Languages",
		"Linters",
		"Formatters",
		"Snippets",
		"Themes"
	],
	"keywords": [
		"skript",
		"intelliskript",
		"intellisense",
		"format",
		"theme"
	],
	"engines": {
		"vscode": "^1.85.0"
	},
	"activationEvents": [
		"onLanguage:Sk-VSC",
		"onLanguage:sk",
		"onLanguage:skriptlang"
	],
	"browser": "./client/dist/browserClientMain",
	"contributes": {
		"snippets": [
			{
				"language": "skript",
				"path": "./snippets/snippets.code-snippets"
			}
		],
		"languages": [
			{
				"id": "skript",
				"extensions": [
					".sk"
				],
				"aliases": [
					"Skript",
					"sk",
					"Sk-VSC",
					"skriptlang"
				],
				"filenames": [],
				"firstLine": "^#\\s*Skript",
				"configuration": "./language-configuration.json",
				"icon": {
					"light": "./graphics/skript icon.png",
					"dark": "./graphics/skript icon.png"
				}
			}
		],
		"configuration": [
			{
				"type": "object",
				"title": "IntelliSkript",
				"id": "IntelliSkript",
				"properties": {
					"IntelliSkript.ErrorExempts": {
						"scope": "resource",
						"type": "string",
						"default": "",
						"description": "A RegExp which allows you to filter out annoying errors"
					},
					"IntelliSkript.UseColorTheme": {
						"scope": "resource",
						"type": "boolean",
						"default": true,
						"description": "Disable this and reload VS code if you have a skript color theme plugin installed"
					},
					"intelliSkript.trace.server": {
						"scope": "window",
						"type": "string",
						"enum": [
							"off",
							"messages",
							"verbose"
						],
						"default": "off",
						"description": "Traces the communication between VS Code and the language server."
					}
				}
			}
		],
		"semanticTokenTypes": [
			{
				"id": "pattern",
				"superType": "regexp",
				"description": "a skript pattern, like set %objects% to %objects%"
			},
			{
				"id": "permission",
				"superType": "string",
				"description": "a permission which a player needs to have to execute a command"
			},
			{
				"id": "expression",
				"superType": "property",
				"description": "an expression"
			},
			{
				"id": "effect",
				"superType": "method",
				"description": "an effect"
			}
		],
		"semanticTokenModifiers": [
			{
				"id": "bukkit_0",
				"description": "Bukkit color code &0"
			},
			{
				"id": "bukkit_1",
				"description": "Bukkit color code &1"
			},
			{
				"id": "bukkit_2",
				"description": "Bukkit color code &2"
			},
			{
				"id": "bukkit_3",
				"description": "Bukkit color code &3"
			},
			{
				"id": "bukkit_4",
				"description": "Bukkit color code &4"
			},
			{
				"id": "bukkit_5",
				"description": "Bukkit color code &5"
			},
			{
				"id": "bukkit_6",
				"description": "Bukkit color code &6"
			},
			{
				"id": "bukkit_7",
				"description": "Bukkit color code &7"
			},
			{
				"id": "bukkit_8",
				"description": "Bukkit color code &8"
			},
			{
				"id": "bukkit_9",
				"description": "Bukkit color code &9"
			},
			{
				"id": "bukkit_a",
				"description": "Bukkit color code &a"
			},
			{
				"id": "bukkit_b",
				"description": "Bukkit color code &b"
			},
			{
				"id": "bukkit_c",
				"description": "Bukkit color code &c"
			},
			{
				"id": "bukkit_d",
				"description": "Bukkit color code &d"
			},
			{
				"id": "bukkit_e",
				"description": "Bukkit color code &e"
			},
			{
				"id": "bukkit_f",
				"description": "Bukkit color code &f"
			},
			{
				"id": "bukkit_b",
				"description": "Bukkit bold &b"
			},
			{
				"id": "bukkit_m",
				"description": "Bukkit strikethrough &m"
			},
			{
				"id": "bukkit_n",
				"description": "Bukkit underline &n"
			},
			{
				"id": "bukkit_o",
				"description": "Bukkit italic &o"
			}
		],
		"themes": [
			{
				"label": "IntelliSkript",
				"uiTheme": "vs-dark",
				"path": "./themes/IntelliSkript.json"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "webpack",
		"watch": "webpack --watch",
		"package": "webpack --mode production --devtool hidden-source-map",
		"lint": "eslint",
		"postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
		"chrome": "npm run compile && vscode-test-web --browserType=chromium --extensionDevelopmentPath=. ./test-data"
	},
	"devDependencies": {
		"@eslint/js": "^9.13.0",
		"@stylistic/eslint-plugin": "^2.9.0",
		"@vscode/test-web": "^0.0.68",
		"eslint": "^9.13.0",
		"path-browserify": "^1.0.1",
		"ts-loader": "^9.5.1",
		"ts-node": "^10.9.2",
		"typescript": "^5.8.2",
		"typescript-eslint": "^8.26.0",
		"webpack": "^5.90.1",
		"webpack-cli": "^5.1.4"
	}
}
