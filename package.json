{
	"name": "intelliskript",
	"displayName": "IntelliSkript",
	"description": "IntelliSense for skript",
	"author": "John Heikens",
	"license": "GNU",
	"version": "1.7.19",
	"icon": "graphics/icon 128x128.png",
	"repository": {
		"type": "git",
		"url": "https://github.com/JohnHeikens/IntelliSkript"
	},
	"publisher": "JohnHeikens",
	"categories": [
		"Programming Languages",
		"Linters",
		"Formatters",
		"Snippets",
		"Themes"
	],
	"keywords": [
		"skript",
		"intelliskript",
		"intellisense",
		"format",
		"theme"
	],
	"engines": {
		"vscode": "^1.85.0"
	},
	"activationEvents": [
		"onLanguage:Sk-VSC",
		"onLanguage:sk",
		"onLanguage:skriptlang"
	],
	"extensionKind": [
		"ui",
		"workspace"
	],
	"main": "./client/out/extension",
	"contributes": {
		"snippets": [
			{
				"language": "skript",
				"path": "./snippets/snippets.code-snippets"
			}
		],
		"languages": [
			{
				"id": "skript",
				"extensions": [
					".sk"
				],
				"aliases": [
					"Skript",
					"sk",
					"Sk-VSC",
					"skriptlang"
				],
				"filenames": [],
				"firstLine": "^#\\s*Skript",
				"configuration": "./language-configuration.json",
				"icon": {
					"light": "./graphics/skript icon.png",
					"dark": "./graphics/skript icon.png"
				}
			}
		],
		"configuration": [
			{
				"type": "object",
				"title": "IntelliSkript",
				"id": "IntelliSkript",
				"properties": {
					"IntelliSkript.ErrorExempts": {
						"scope": "resource",
						"type": "string",
						"default": "",
						"description": "A RegExp which allows you to filter out annoying errors"
					},
					"IntelliSkript.UseColorTheme": {
						"scope": "resource",
						"type": "boolean",
						"default": true,
						"description": "Disable this and reload VS code if you have a skript color theme plugin installed"
					},
					"intelliSkript.trace.server": {
						"scope": "window",
						"type": "string",
						"enum": [
							"off",
							"messages",
							"verbose"
						],
						"default": "off",
						"description": "Traces the communication between VS Code and the language server."
					}
				}
			}
		],
		"semanticTokenTypes": [
			{
				"id": "pattern",
				"superType": "regexp",
				"description": "a skript pattern, like set %objects% to %objects%"
			},
			{
				"id": "permission",
				"superType": "string",
				"description": "a permission which a player needs to have to execute a command"
			},
			{
				"id": "expression",
				"superType": "property",
				"description": "an expression"
			},
			{
				"id": "effect",
				"superType": "method",
				"description": "an effect"
			}
		],
		"semanticTokenModifiers": [
			{
				"id": "bukkit_0",
				"description": "Bukkit color code &0"
			},
			{
				"id": "bukkit_1",
				"description": "Bukkit color code &1"
			},
			{
				"id": "bukkit_2",
				"description": "Bukkit color code &2"
			},
			{
				"id": "bukkit_3",
				"description": "Bukkit color code &3"
			},
			{
				"id": "bukkit_4",
				"description": "Bukkit color code &4"
			},
			{
				"id": "bukkit_5",
				"description": "Bukkit color code &5"
			},
			{
				"id": "bukkit_6",
				"description": "Bukkit color code &6"
			},
			{
				"id": "bukkit_7",
				"description": "Bukkit color code &7"
			},
			{
				"id": "bukkit_8",
				"description": "Bukkit color code &8"
			},
			{
				"id": "bukkit_9",
				"description": "Bukkit color code &9"
			},
			{
				"id": "bukkit_a",
				"description": "Bukkit color code &a"
			},
			{
				"id": "bukkit_b",
				"description": "Bukkit color code &b"
			},
			{
				"id": "bukkit_c",
				"description": "Bukkit color code &c"
			},
			{
				"id": "bukkit_d",
				"description": "Bukkit color code &d"
			},
			{
				"id": "bukkit_e",
				"description": "Bukkit color code &e"
			},
			{
				"id": "bukkit_f",
				"description": "Bukkit color code &f"
			},
			{
				"id": "bukkit_b",
				"description": "Bukkit bold &b"
			},
			{
				"id": "bukkit_m",
				"description": "Bukkit strikethrough &m"
			},
			{
				"id": "bukkit_n",
				"description": "Bukkit underline &n"
			},
			{
				"id": "bukkit_o",
				"description": "Bukkit italic &o"
			}
		],
		"themes": [
			{
				"label": "IntelliSkript",
				"uiTheme": "vs-dark",
				"path": "./themes/IntelliSkript.json"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run webpack",
		"webpack": "npm run clean && webpack --mode production --config ./client/webpack.config.js && webpack --mode production --config ./server/webpack.config.js",
		"webpack:dev": "npm run clean && webpack --mode none --config ./client/webpack.config.js && webpack --mode none --config ./server/webpack.config.js",
		"compile": "tsc -b",
		"compile:client": "tsc -b ./client/tsconfig.json",
		"compile:server": "tsc -b ./server/tsconfig.json",
		"watch": "tsc -b -w",
		"lint": "npm run lint:client && npm run lint:server",
		"lint:client": "eslint --config ./client/.eslintrc.json ./client/src/*.ts",
		"lint:server": "eslint --config ./server/.eslintrc.json ./server/src/*.ts",
		"clean": "rimraf client/out && rimraf server/out",
		"postinstall": "cd client && npm install && cd ../server && npm install && cd .."
	},
	"devDependencies": {
		"@types/node": "^18.11.9",
		"@typescript-eslint/parser": "^6.14.0",
		"eslint": "^8.56.0",
		"merge-options": "^3.0.4",
		"rimraf": "^5.0.5",
		"ts-loader": "^9.5.1",
		"ts-node": "^10.9.2",
		"typescript": "^5.3.3",
		"webpack": "^5.89.0",
		"webpack-cli": "^5.1.4"
	},
	"dependencies": {
		"vscode-uri": "^3.0.8"
	}
}